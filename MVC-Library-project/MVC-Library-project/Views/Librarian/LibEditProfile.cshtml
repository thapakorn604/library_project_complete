<html lang="en">

@Html.Partial("_Header")
<body>
    <!-- NAVBAR -->
    @Html.Partial("_Navbar_librarian")
    <!-- END NAV -->
         <!-- BODY -->
        <div class="container">
            <div class="section"></div>
            <div class="row">
                <div class="col s12 m2">
                    <ul>
                        <li>
                            <img src="img/icebear.jpg" class="circle responsive-img">
                        </li>
                        <li class="valign center">
                            <a href="#editProfile">Edit Profile</a>
                        </li>
                    </ul>
                </div>
                <!--Edit Profile-->
                <div class="col s12 m5"><h3>Edit Profile</h3></div>
                <div class="col s12 m10 valign center">
                    <div class="row">
                        <div class="input-field col s12 m5">
                            <i class="material-icons prefix">account_circle</i>
                            <label class="firstName">Firstname</label>
                            <input id="icon_prefix" type="text" class="validate">
                        </div>
                        <div class="input-field col s12 m5">
                            <i class="material-icons prefix">account_circle</i>
                            <label class="lastName">Surname</label>
                            <input id="icon_prefix" type="text" class="validate">
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12 m5">
                            <i class="material-icons prefix">email</i>
                            <label for="email">Email</label>
                            <input id="email" type="email" class="validate">
                        </div>
                        <div class="input-field col s12 m5">
                            <i class="material-icons prefix">phone</i>
                            <label for="telephone">Telephone</label>
                            <input id="icon_telephone" type="tel" class="validate">
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12 m5">
                            <i class="material-icons prefix">event</i>
                            <label for="bday">Birthday</label>
                            <input type="text" class="datepicker">
                        </div>
                        <div class="col s12 m5">
                            <form action="#">
                                <p class="valign center">
                                <input class="with-gap" name="gender" type="radio" id="male"/>
                                <label for="male">&nbsp;&nbsp;Male&nbsp;&nbsp;</label>
                                <input class="with-gap" name="gender" type="radio" id="female"/>
                                <label for="female">Female</label>
                                </p>
                            </form>
                        </div>
                    </div>
                    <div class="row">   
                        <div class="col s12 m10">
                            <button class="btn waves-effect waves-light red" type="submit" name="action">Submit</button>
                            <button class="btn waves-effect waves-light red" type="submit" name="action">Cancel</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
         <!-- END BODY -->

        <!-- Plus -->
     
    <!-- FOOTER -->
   @Html.Partial("_Footer")
    <!-- END FOOTER -->


</body>
</html>